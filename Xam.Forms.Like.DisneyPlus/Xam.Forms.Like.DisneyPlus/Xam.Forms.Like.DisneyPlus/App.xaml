<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xam.Forms.Like.DisneyPlus.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Color x:Key="DarkBackColor">#1B1D29</Color>

            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.NavBarIsVisible" Value="False" />
                <Setter Property="Shell.TabBarForegroundColor" Value="White" />
                <Setter Property="Shell.TabBarTitleColor" Value="White" />
                <Setter Property="Shell.TabBarDisabledColor" Value="LightGray" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="LightGray" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource DarkBackColor}" />
            </Style>
            <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}" />
            
            <!-- IMPLICIT -->
            <Style TargetType="Label" >
                <Setter Property="FontFamily" Value="disneyplus"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <!-- IMPLICIT -->

        </ResourceDictionary>
    </Application.Resources>
</Application>